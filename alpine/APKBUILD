# Contributor: Kalle M. Aagaard <alpine@k-moeller.dk>
# Maintainer: Kalle M. Aagaard <alpine@k-moeller.dk>
pkgname=acmednsproxy
pkgver=0.0.4
pkgrel=1
pkgdesc="A small certmgr service"
url="https://github.com/KalleDK/${pkgname}/"
arch="all"
license="MIT"
#source="${pkgname}-${pkgver}.tar.gz::https://github.com/KalleDK/${pkgname}/archive/v${pkgver}.tar.gz
source="${pkgname}-${pkgver}.tar.gz::https://github.com/KalleDK/${pkgname}/archive/refs/heads/main.tar.gz
        auth.json
        providers.json
        ${pkgname}.initd
        ${pkgname}.confd
        "
builddir="${srcdir}/${pkgname}-${pkgver}"
makedepends="go"
subpackages="$pkgname-tools $pkgname-openrc"

check() {
    true
}

build() {
    cd ${srcdir}/acmednsproxy-main
    go build -ldflags=" \
        -X 'github.com/KalleDK/acmednsproxy/cmd/acmednsproxy/cmd.defaultAuthFile=/etc/acmednsproxy/auth.json' \
        -X 'github.com/KalleDK/acmednsproxy/cmd/acmednsproxy/cmd.defaultProviderFile=/etc/acmednsproxy/providers.json' \
    " -o ${builddir}/${pkgname} ./cmd/${pkgname}
    go build -o ${builddir}/htcrypt ./cmd/htcrypt
}

package() {
    # Binaries
    install -Dm755 "${builddir}/${pkgname}"   "${pkgdir}/usr/bin/${pkgname}"
    install -Dm755 "${builddir}/htcrypt"      "${pkgdir}/usr/bin/htcrypt"

    # Default configs
    install -Dm640 "${srcdir}/auth.json"      "${pkgdir}/etc/${pkgname}/auth.json"
    install -Dm640 "${srcdir}/providers.json" "${pkgdir}/etc/${pkgname}/providers.json"

    # Openrc
    install -Dm755 "${srcdir}/${pkgname}.initd" "${pkgdir}/etc/init.d/${pkgname}"
    install -Dm644 "${srcdir}/${pkgname}.confd" "${pkgdir}/etc/conf.d/${pkgname}"   
}


tools() {
    amove usr/bin/htcrypt
}
